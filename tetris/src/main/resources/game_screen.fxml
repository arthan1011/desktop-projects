<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="400.0"
            prefWidth="600.0"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.arthan.desktop.tetris.controller.GameScreenController">
    <center>
        <Pane>
            <GridPane fx:id="gameGrid"
                      hgap="2.0"
                      prefHeight="420.0"
                      prefWidth="220.0"
                      vgap="2.0">
            </GridPane>
        </Pane>

    </center>
    <left>
        <VBox prefHeight="200.0"
              prefWidth="100.0"
              BorderPane.alignment="CENTER">
            <children>
                <Label text="Test"/>
                <Hyperlink fx:id="test_LaunchSquareButton"
                           onAction="#launchSquare"
                           text="Launch square" />
                <Hyperlink fx:id="test_LaunchSquareNearBottomButton"
                           onAction="#test_launchSquareNearBottom"
                           text="Launch square near bottom" />
                <Hyperlink fx:id="test_set_blocks_in_bottom"
                           onAction="#test_setBlocksInBottom"
                           text="Set blocks in the bottom" />
                <Hyperlink fx:id="test_launchSquare3PixelAboveBottom"
                           onAction="#test_launchSquare3PixelAboveBottom"
                           text="Launch square 3 pixels above bottom" />
                <Hyperlink fx:id="testLaunchSquare2PixelAboveBottom__withFigureProvider"
                           onAction="#testLaunchSquare2PixelAboveBottom__withFigureProvider"
                           text="Launch square near bottom with provider" />
            </children>
        </VBox>
    </left>
    <top>
        <Label text="Tetris"
               BorderPane.alignment="CENTER">
            <font>
                <Font name="Arial Bold"
                      size="27.0"/>
            </font>
        </Label>
    </top>
</BorderPane>
